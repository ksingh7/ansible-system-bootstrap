# {{ ansible_managed }}

[controller]
concurrency=1
drivers ={% for host in groups['cosbench'] %}{% if loop.index == 1 %} {{loop.length}}{% endif %}{% endfor %} 
log_level = INFO
log_file = log/system.log
archive_dir = archive

{% for host in groups['cosbench'] %}
{% if cosbench_driver %}
[driver{{ loop.index }}]
name = {{ hostvars[host]['ansible_hostname'] }}
url = http://{{hostvars[host]['ansible_'+(interface_name)]['ipv4']['address']}}:18088/driver

{% endif %}
{% endfor %}
